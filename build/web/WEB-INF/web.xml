<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>companymailer.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>companymailer.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InboxServlet</servlet-name>
        <servlet-class>companymailer.InboxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComposeServlet</servlet-name>
        <servlet-class>companymailer.ComposeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComposeServletProcess</servlet-name>
        <servlet-class>companymailer.ComposeServletProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SentServlet</servlet-name>
        <servlet-class>companymailer.SentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewMailServlet</servlet-name>
        <servlet-class>companymailer.ViewMailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMailServlet</servlet-name>
        <servlet-class>companymailer.DeleteMailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrashServlet</servlet-name>
        <servlet-class>companymailer.TrashServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>companymailer.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InboxServlet</servlet-name>
        <url-pattern>/InboxServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComposeServlet</servlet-name>
        <url-pattern>/ComposeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComposeServletProcess</servlet-name>
        <url-pattern>/ComposeServletProcess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SentServlet</servlet-name>
        <url-pattern>/SentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewMailServlet</servlet-name>
        <url-pattern>/ViewMailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMailServlet</servlet-name>
        <url-pattern>/DeleteMailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrashServlet</servlet-name>
        <url-pattern>/TrashServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
